@model MyBlogNight.EntityLayer.Concrete.Article


<section id="cta" class="section" style="background: rgba(0, 0, 0, 0) url(@Model.CoverImageUrl) no-repeat scroll center center / cover !important; position: relative;">
    <style>
        #cta::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        #cta .container {
            position: relative;
            z-index: 2;
        }

        #cta h2, #cta p, #cta a {
            color: white;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 align-self-center">
                <p class="lead"> Latest Post</p>
                <h2>@Model.Title</h2>
                @if (Model.Detail.Length >= 100)
                {
                    <p class="lead"> @Model.Detail.Substring(0, 100)...</p>

                }
                else
                {
                    <p class="lead"> @Model.Detail</p>

                }
                <a href="/Default/ArticleDetail/@Model.ArticleId" class="btn btn-warning">Read More ....</a>
            </div>
            <div class="col-lg-4 col-md-12">
                @*  @await Component.InvokeAsync("_DefaultNewsletterComponentPartial", new { model = new NewsLetter() }) *@
            </div>
        </div>
    </div>
</section>