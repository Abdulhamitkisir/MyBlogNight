<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <!-- Bootstrap CSS bağlantısı -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJt3W3X7b2zvJ7dujXduSABe7nQ4hJvXT1uC5L9JvQ0zRYnGfYPkpln/7OSh" crossorigin="anonymous">
    <style>
        body, html {
            height: 100%;
        }
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
        .register-form {
            width: 100%;
            max-width: 600px;
            padding: 30px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f8f9fa;
        }
        .logo-container {
            width: 100%;
            text-align: center;
            margin-bottom: 20px;
        }
        .logo-container img {
            max-width: 100%;
            height: auto;
            width: 200px; /* Logo genişliği burada ayarlanabilir */
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="register-form">
            <!-- Logo alanı -->
            <div class="logo-container">
                <img src="/markedia/images/version/market-logo.png" alt="Logo">
            </div>
            <h3 class="text-center">Author Register Form</h3>
            <form method="post">
                <div class="mb-3">
                    <label for="firstName" class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name" required>
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Surname</label>
                    <input type="text" class="form-control" asp-for="Surname" placeholder="Enter your surname" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">User Name</label>
                    <input type="text" class="form-control" asp-for="Username" placeholder="Enter your username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="Password" placeholder="Enter your password" required>
                        <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
            <p class="text-center mt-3">
                You have any account ?
                <a href="/Login/Index" class="btn btn-link">Go to Login Page</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap ve Icons için gerekli JavaScript bağlantıları -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0r0pE4wn2j5R7hXyJdfoPUvQxWsAHyg4UjVp2z70VOQ08J0p" crossorigin="anonymous"></script>

    <!-- Şifreyi gösterme işlevi için JavaScript -->
    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');

        togglePassword.addEventListener('click', function (e) {
            // Şifreyi görünür hale getirme
            const type = passwordField.type === 'password' ? 'text' : 'password';
            passwordField.type = type;
            // Göz simgesini değiştirme
            this.innerHTML = type === 'password' ? '<i class="bi bi-eye"></i>' : '<i class="bi bi-eye-slash"></i>';
        });
    </script>

</body>
</html>
